<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:text="Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/bodyTextView" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nameTextView"
            android:layout_below="@id/bodyTextView" android:layout_alignParentEnd="true"
            android:textAppearance="@android:style/TextAppearance.Small"/>
</RelativeLayout>
