<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_alignParentStart="true"
                android:descendantFocusability="blocksDescendants"
                android:layout_alignParentTop="true">


    <ImageView android:layout_width="80dp" android:layout_height="80dp"
               android:id="@+id/imageView1"
               android:layout_alignParentTop="true"
               android:layout_alignParentStart="true" android:layout_marginTop="2dp" android:layout_marginStart="2dp"
               android:layout_marginEnd="2dp" android:layout_marginBottom="2dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/titleTextView1"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/imageView1"
            android:layout_toEndOf="@id/imageView1"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/resTextView1"
            android:layout_below="@+id/titleTextView1"
            android:layout_alignParentEnd="false" android:layout_toEndOf="@id/imageView1"
            android:layout_alignParentBottom="true" android:layout_toRightOf="@id/imageView1"/>

    <ToggleButton android:layout_width="20dp" android:layout_height="20dp"
                  android:id="@+id/buttonStar2"
                  android:background="@drawable/btn_like"
                  android:layout_alignParentBottom="true"
                  android:checked="false"
                  android:text=""
                  android:textOff=""
                  android:textOn="" android:layout_marginTop="2dp" android:layout_marginStart="10dp"
                  android:layout_marginEnd="2dp" android:layout_marginBottom="2dp"
                  android:layout_toEndOf="@id/resTextView1"
                  android:layout_marginLeft="10dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="name"
            android:id="@+id/nameTextView1"
            android:layout_below="@+id/titleTextView1"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"/>

</RelativeLayout>